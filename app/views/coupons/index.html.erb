<p id="notice"><%= notice %></p>
<div class="container centered">
  <h1 class="h1">All Coupons for Better Letters</h1>
  <a class ="btn btn-primary" href="http://gum.co/betterletters">check out Better letters</a>
  <p class="p"> Last Updated: <%= @coupons.last.created_at %></p>
  <p><%= @coupons.where(:times_used => 0).count  %> Codes Available</p>
  <table class="table table-striped table-borderless table-sm table-hover">
    <tbody >
      <% @coupons.each do |c| %>
        <tr>
          
          <% if c.times_used.to_i > 0 %>
          <td class = " p table-danger"><%= c.code %></td>
          <td class = "table-danger"><%= link_to "Code Used", "https://gum.co/betterletters/" + c.code, class: "btn btn-danger disabled btn-sm"  %></td>
          <% else %>
          <td class = "p table-success"><%= c.code %></td>
          <td class = "table-success"><%= link_to "Code Available", "https://gum.co/betterletters/" + c.code, class: "btn btn-success btn-sm"  %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Coupon', new_coupon_path %>
</div>